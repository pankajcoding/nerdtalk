extends layout

block content
    h1.add-headline=title
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/posts/add', enctype="multipart/form-data").addform
        .form-group
            label Title:
            input.form-control(name='title', type='text')
        .form-group
            label Body:
            textarea.form-control(name='body', id='body')
        .form-group.form-file-upload.form-file-multiple.bmd-form-group
            label Main Image:  
            input.inputFileHidden(type='file', multiple='',name='mainimage')
            .input-group
                input.form-control.inputFileVisible(type='text', placeholder='Upload Main Image')
                span.input-group-btn
                    button.btn.btn-fab.btn-round.btn-primary(type='button')
                        i.material-icons attach_file
                        .ripple-container

        input.btn.btn-default(name='submit', type='submit', value='Save')
        script(src='/ckeditor/ckeditor.js')
        script
            | CKEDITOR.replace('body');
            
